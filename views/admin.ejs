<!doctype html>
<html lang="en">
<%- include('partials/head') %>
<body>
  <%- include('partials/topbar') %>

  <main class="container">
    <section class="card">
      <div class="row-between">
        <h1>Admin</h1>
        <div class="action-row">
          <a class="button-secondary" href="/admin/pages">Status Pages</a>
          <a class="button-secondary" href="/admin/create">Create Monitor</a>
        </div>
      </div>
      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Slug</th>
              <th>Type</th>
              <th>Status</th>
              <th>Uptime</th>
              <th>Last Checked</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (monitors.length === 0) { %>
              <tr><td colspan="7">No monitors configured.</td></tr>
            <% } %>
            <% monitors.forEach((m) => { %>
              <tr>
                <td><%= m.name %></td>
                <td><%= m.slug %></td>
                <td><%= (m.monitor_type || 'http').toUpperCase() %></td>
                <td><span class="badge <%= m.current_status === 'UP' ? 'up' : (m.current_status === 'DOWN' ? 'down' : 'unknown') %>"><%= m.current_status %></span></td>
                <td><%= m.uptimePercent %>%</td>
                <td><%= m.last_checked || 'Never' %></td>
                <td>
                  <div class="action-row">
                    <a class="button-secondary" href="/admin/<%= m.slug %>/edit">Edit</a>
                    <form method="post" action="/admin/<%= m.slug %>/remove" onsubmit="return confirm('Remove this monitor?')">
                      <button type="submit" class="danger">Remove</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </main>
</body>
</html>
