<!doctype html>
<html lang="en">
<%- include('partials/head') %>
<body>
  <%- include('partials/topbar') %>

  <main class="container">
    <section class="card">
      <div class="page-head row-between">
        <div>
          <h1>Monitors</h1>
          <p class="meta">Manage monitor targets, intervals, and visibility.</p>
        </div>
        <div class="action-row">
          <form method="post" action="/admin/refresh-all">
            <button type="submit" class="button-secondary">Refresh All</button>
          </form>
          <a class="button-secondary" href="/admin/pages">Status Pages</a>
          <a class="button-secondary" href="/admin/settings">Settings</a>
          <a class="button-secondary" href="/admin/create">Create Monitor</a>
        </div>
      </div>
      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Slug</th>
              <th>Type</th>
              <th>Visibility</th>
              <th>Status URL</th>
              <th>Status</th>
              <th>Uptime</th>
              <th>Last Checked</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (monitors.length === 0) { %>
              <tr><td colspan="9">No monitors configured.</td></tr>
            <% } %>
            <% monitors.forEach((m) => { %>
              <tr>
                <td><%= m.name %></td>
                <td><%= m.slug %></td>
                <td><%= (m.monitor_type || 'http').toUpperCase() %></td>
                <td>
                  <% if (m.hide_url) { %><span class="badge unknown">URL Hidden</span><% } %>
                  <% if (m.lock_enabled) { %><span class="badge down">Locked</span><% } %>
                  <% if (!m.hide_url && !m.lock_enabled) { %><span class="badge up">Public</span><% } %>
                </td>
                <td><a href="/status/<%= m.slug %>" target="_blank" rel="noopener">/status/<%= m.slug %></a></td>
                <td><span class="badge <%= m.current_status === 'UP' ? 'up' : (m.current_status === 'DOWN' ? 'down' : 'unknown') %>"><%= m.current_status %></span></td>
                <td><%= m.uptimePercent %>%</td>
                <td title="<%= m.last_checked || '' %>"><%= m.lastCheckedAgo %></td>
                <td>
                  <div class="action-row">
                    <form method="post" action="/admin/<%= m.slug %>/refresh">
                      <button type="submit" class="button-secondary">Refresh</button>
                    </form>
                    <a class="button-secondary" href="/admin/<%= m.slug %>/edit">Edit</a>
                    <form method="post" action="/admin/<%= m.slug %>/remove" onsubmit="return confirm('Remove this monitor?')">
                      <button type="submit" class="danger">Remove</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </main>
  <%- include('partials/footer') %>
</body>
</html>



