<!doctype html>
<html lang="en">
<%- include('partials/head') %>
<body>
  <%- include('partials/topbar') %>

  <main class="container">
    <section class="card">
      <h1>Create Status Page</h1>
      <form method="post" action="/admin/pages/create" class="form">
        <label>Title<input required name="title" maxlength="120"></label>
        <label>Slug<input required name="slug" pattern="[a-z0-9-]{1,100}" placeholder="public-status"></label>
        <label>Description<input name="description" maxlength="255" placeholder="Optional description"></label>

        <label>Monitors</label>
        <div class="check-list">
          <% if (monitors.length === 0) { %>
            <p class="meta">No monitors available yet.</p>
          <% } %>
          <% monitors.forEach((m) => { %>
            <label class="check-item"><input type="checkbox" name="monitor_slugs" value="<%= m.slug %>"> <%= m.name %> (<%= m.slug %>)</label>
          <% }) %>
        </div>

        <div class="action-row">
          <button type="submit">Create</button>
          <a class="button-secondary" href="/admin/pages">Cancel</a>
        </div>
      </form>
    </section>
  </main>
</body>
</html>
