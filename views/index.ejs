<!doctype html>
<html lang="en">
<%- include('partials/head') %>
<body>
  <%- include('partials/topbar') %>

  <main class="container">
    <section class="card">
      <h1>Monitors</h1>
      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Type</th>
              <th>Target</th>
              <th>Status</th>
              <th>Uptime</th>
              <th>Response</th>
              <th>Last Checked</th>
              <th>Interval</th>
            </tr>
          </thead>
          <tbody>
            <% if (monitors.length === 0) { %>
              <tr>
                <td colspan="8">No monitors configured.</td>
              </tr>
            <% } %>
            <% monitors.forEach((m) => { %>
              <tr>
                <td><a href="/status/<%= m.slug %>"><%= m.name %></a></td>
                <td><%= (m.monitor_type || 'http').toUpperCase() %></td>
                <td class="url"><%= m.url %></td>
                <td>
                  <span class="badge <%= m.current_status === 'UP' ? 'up' : (m.current_status === 'DOWN' ? 'down' : 'unknown') %>">
                    <%= m.current_status %>
                  </span>
                </td>
                <td><%= m.uptimePercent %>%</td>
                <td><%= m.response_time ?? 'N/A' %>ms</td>
                <td><%= m.last_checked || 'Never' %></td>
                <td><%= m.intervalSeconds %>s</td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </main>
</body>
</html>
